<?xml version="1.0" ?>

<launch>
  <arg name="use_present" default="true" />

  <param name="robot_description" command="$(find xacro)/xacro.py '$(find manipulator_h_description)/urdf/manipulator_h.xacro'" />

  <!-- send joint values -->
  <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher">
    <param name="use_gui" value="FALSE"/>
    <param name="rate" value="125"/>
    <remap from="/joint_states" to="/robotis/manipulator_h/joint_states" />
    <rosparam param="source_list" if="$(arg use_present)">["robotis/present_joint_states"]</rosparam>
    <rosparam param="source_list" unless="$(arg use_present)">["robotis/goal_joint_states"]</rosparam>
  </node>

  <!-- Combine joint values to TF-->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" respawn="true" output="screen">
    <remap from="/joint_states" to="/robotis/manipulator_h/joint_states"/>
  </node>

  <!-- Show in Rviz -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find manipulator_h_description)/launch/manipulator_h.rviz"/>

</launch>
